<header class="picup-header">
  <nav class="navbar navbar-expand-md navbar-light">
    <%= link_to root_path, class: 'navbar-brand' do %>
      <span class="picup-logo">Picup</span>
    <% end %>
    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#picup-header-navbar" aria-controls="picup-header-navbar" aria-expanded="false" aria-label="ナビゲーションの切替">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="picup-header-navbar">
      <ul class="navbar-nav mr-auto left-menu">
        <li class="nav-item">
          <a class="nav-link" href="">ランキング</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="">新着</a>
        </li>
        <% if user_signed_in? %>
          <li class="nav-item">
            <a class="nav-link" href="">投稿する</a>
          </li>
        <% end %>
      </ul>

      <div class="right-menu">
        <% if user_signed_in? %>
          <div class="btn-group">
            <a href="" class="nav-link dropdown-toggle" id="picup-header-navbar-dropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <span><%= current_user.name %>さん</span>
            </a>
            <div class="dropdown-menu" aria-labelledby="picup-header-navbar-dropdown">
              <a class="dropdown-item" href="">
                <p>マイページ</p>
              </a>
              <a class="dropdown-item" href="">
                <p>お気に入り</p>
              </a>
              <a class="dropdown-item" href="">
                <p>投稿する</p>
              </a>
              <div class="dropdown-divider"></div>
              <%= link_to destroy_user_session_path, class: 'dropdown-item', method: :delete do %>
                <p>ログアウト</p>
              <% end %>
            </div>
          </div>
        <% else %>
          <%= link_to '会員登録', new_user_registration_path, class: 'btn btn-register' %>
          <%= link_to 'ログイン', new_user_session_path, class: 'btn btn-login' %>
        <% end %>
      </div>
    </div>
  </nav>
</header>
